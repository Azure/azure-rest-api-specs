{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2019",
    "types": ["node"],
    "esModuleInterop": true,
    "lib": ["es2020"],
    "newLine": "LF",
    "outDir": "dist",
    "rootDir": "."
  },
  "exclude": ["dist", "node_modules"]
}