    "@ts-common/commonmark-to-markdown": "^2.0.2",
    "commonmark": "^0.29.0",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.20",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/commonmark": "^0.27.4",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^20.0.0",
    "prettier": "~3.5.3",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "~5.8.2",
    "vitest": "^3.0.7"
