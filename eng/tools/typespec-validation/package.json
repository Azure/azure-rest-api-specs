{
  "name": "@azure-tools/typespec-validation",
  "private": true,
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "tsv": "cmd/tsv.js"
  },
  "dependencies": {
    "@azure-tools/specs-shared": "file:../../../.github/shared",
    "debug": "^4.4.3",
    "globby": "^16.0.0",
    "picocolors": "^1.1.1",
    "simple-git": "^3.24.0",
    "suppressions": "file:../suppressions",
    "strip-ansi": "^7.1.0",
    "yaml": "^2.4.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "cross-env": "^10.1.0",
    "eslint": "^9.22.0",
    "prettier": "3.8.0",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^4.0.15"
  },
  "scripts": {
    "build": "tsc --build",
    "check": "npm run build && npm run lint && npm run format:check && npm run test:ci",
    "format": "prettier . --ignore-path ../.prettierignore --write",
    "format:check": "prettier . --ignore-path ../.prettierignore --check",
    "format:check:ci": "prettier . --ignore-path ../.prettierignore --check --log-level debug",
    "lint": "cross-env DEBUG=eslint:eslint,eslint:linter eslint",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
