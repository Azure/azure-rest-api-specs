{
  "name": "@azure-tools/oav-runner",
  "private": true,
  "type": "module",
  "main": "dist/src/main.js",
  "bin": {
    "oav-runner": "cmd/oav-runner.js"
  },
  "scripts": {
    "build": "tsc --build",
    "check": "npm run build && npm run lint && npm run format:check && npm run test:ci",
    "format": "prettier . --ignore-path ../.prettierignore --write",
    "format:check": "prettier . --ignore-path ../.prettierignore --check",
    "format:check:ci": "prettier . --ignore-path ../.prettierignore --check --log-level debug",
    "lint": "cross-env DEBUG=eslint:eslint eslint",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose"
  },
  "dependencies": {
    "@azure-tools/specs-shared": "file:../../../.github/shared",
    "js-yaml": "^4.1.0",
    "oav": "4.0.3",
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.22.0",
    "prettier": "~3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
