{
  "name": "@azure-tools/lint-diff",
  "private": true,
  "type": "module",
  "main": "dist/src/lint-diff.js",
  "bin": {
    "lint-diff": "cmd/lint-diff.js"
  },
  "scripts": {
    "build": "tsc --build",
    "check": "npm run build && npm run lint && npm run format:check && npm run test:ci",
    "clean": "rm -rf dist && rm -rf node_modules",
    "format": "prettier . --ignore-path ../.prettierignore --write",
    "format:check": "prettier . --ignore-path ../.prettierignore --check",
    "format:check:ci": "prettier . --ignore-path ../.prettierignore --check --log-level debug",
    "lint": "cross-env DEBUG=eslint:eslint,eslint:linter eslint",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose"
  },
  "engines": {
    "node": ">= 20.0.0"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^15.1.3",
    "@azure-tools/specs-shared": "file:../../../.github/shared",
    "@microsoft.azure/openapi-validator": "2.2.4",
    "@microsoft.azure/openapi-validator-core": "1.0.7",
    "@microsoft.azure/openapi-validator-rulesets": "2.2.0",
    "autorest": "^3.7.2",
    "change-case": "^5.4.4",
    "deep-eql": "^5.0.2",
    "marked": "^17.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/deep-eql": "^4.0.2",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "cross-env": "^10.1.0",
    "eslint": "^9.22.0",
    "execa": "^9.5.2",
    "memfs": "^4.17.0",
    "prettier": "3.8.0",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^4.0.15"
  }
}
