{
  "name": "@azure-tools/spec-gen-sdk-runner",
  "private": true,
  "type": "module",
  "main": "dist/src/index.js",
  "version": "0.0.1",
  "bin": {
    "spec-gen-sdk-runner": "cmd/spec-gen-sdk-runner.js"
  },
  "scripts": {
