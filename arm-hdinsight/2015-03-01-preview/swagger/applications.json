    "/providers/Microsoft.HDInsight/operations": {
      "get": {
        "tags": [
          "Operations"
        ],
        "description": "Lists all of the available HDInsight REST API operations.",
        "operationId": "Operations_List",
        "parameters": [
          {
            "$ref": "#/parameters/ApiVersionParameter"
          }
        ],
        "responses": {
          "200": {
            "description": "OK. The request has succeeded.",
            "schema": {
              "$ref": "./cluster.json#/definitions/OperationListResult"
            }
          }
        },
        "x-ms-pageable": {
          "nextLinkName": "nextLink"
        }
      }
    }
  },
  "definitions": {
    "ApplicationGetHttpsEndpoint": {
      "description": "Gets application access modes",
      "type": "string"
    },
    "ApplicationGetEndpoint": {
      "description": "Gets Application ssh endpoint",
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "Gets the location of the endpoint."
        },
        "destinationPort": {
          "type": "integer",
          "format": "int32",
          "description": "Gets the destinationPort to connect to."
        },
        "publicPort": {
          "type": "integer",
          "format": "int32",
          "description": "Gets the publicPort to connect to."
        }
      }
    },
    "ApplicationGetProperties": {
      "description": "HDInsight cluster application.",
      "type": "object",
      "properties": {
        "ComputeProfile": {
          "$ref":"./cluster.json#/definitions/ComputeProfile",
          "description": "Gets or sets the list of roles in the cluster."
        },
        "InstallScriptActions": {
          "type": "array",
          "items": {
            "$ref": "./cluster.json#/definitions/RuntimeScriptAction"
          },
          "description": "Gets uninstall script actions."          
        },
        "UninstallScriptActions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RuntimeScriptAction"
          },
          "description": "Gets uninstall script actions."
        },
        "HttpsEndpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ApplicationGetHttpsEndpoint"
          },
          "description": "Gets application Https endpoints."
        },
        "SshEndpoints": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ApplicationGetEndpoint"
          },
          "description": "Gets application ssh endpoints."
        },
        "ProvisioningState": {
          "type": "string",
          "description": "Gets the provisioning state of the application"          
        },
        "ApplicationState": {
          "type": "string",
          "description": "Gets the Application state"
        },
        "ErrorInfos": {
          "type": "array",
          "items": {
            "$ref": "./cluster.json#/definitions/ErrorInfo"
          },
          "description": "Gets or sets the list of errors."
        },
        "CreatedDate": {
          "type": "string",
          "format": "date-time",
          "description": "Gets the application created date time."
        } 
      }
    },
    "Application": {
      "description": "HDInsight cluster application",
      "type": "object",
      "properties": {
        "id": {
          "description": "Gets or sets the ID of the application",
          "type": "string"
        },
        "name": {
          "description": "Gets or sets the name of the application.",
          "type": "string"
        },
        "type": {
          "description": "Gets or sets the type of application.",
          "type": "string"
        },
        "eTag": {
          "description": "Gets or sets the ETag for the application",
          "type": "string"
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Gets or sets the application tags."
        },
        "properties": {
          "$ref": "#/definitions/ApplicationGetProperties",
          "description": "Gets or sets the properties of the application."
        }
      }
    },
    "ApplicationListResult": {
      "description": "Result of the request to list cluster Applications. It contains a list of operations and a URL link to get the next set of results.",
      "properties": {
        "value": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Application"
          },
          "description": "List of HDInsight applications installed on HDInsight cluster."
        },
        "nextLink": {
          "type": "string",
          "description": "URL to get the next set of operation list results if there are any."
        }
      }
    }
  },
  "parameters": {
    "SubscriptionIdParameter": {
      "name": "subscriptionId",
      "in": "path",
      "required": true,
      "type": "string",
      "description": "Gets subscription credentials which uniquely identify Microsoft Azure subscription. The subscription ID forms part of the URI for every service call."
    },
    "ApiVersionParameter": {
      "name": "api-version",
      "in": "query",
      "required": true,
      "type": "string",
      "description": "Client Api Version."
    }
  }
