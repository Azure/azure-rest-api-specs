{
  "private": "true",
  "type": "module",
  "dependencies": {
    "@azure-tools/specs-shared": "file:./../shared"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@octokit/webhooks-types": "^7.5.1",
    "@types/github-script": "github:actions/github-script",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.0.7",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "prettier": "~3.5.3",
    "typescript": "~5.8.2",
    "vitest": "^3.0.7"
  },
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint",
    "lint:tsc": "tsc && echo 'Type checking completed successfully'",
    "prettier": "prettier \"**/*.js\" --check",
    "prettier:debug": "prettier \"**/*.js\" --check ---log-level debug",
    "prettier:write": "prettier \"**/*.js\" --write",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose"
  }
}
