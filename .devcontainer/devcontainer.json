{
  "name": "TypeSpec Dev Container",
  //"image": "mcr.microsoft.com/devcontainers/typescript-node:dev-20",
  //"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  // Default is 2 cores which is too slow for this codebase
  "hostRequirements": {
    "cpus": 4
  },
  "postCreateCommand": "bash .devcontainer/init.sh",
  "features": {
    // these are already in the codespaces image.
    // "mcr.microsoft.com/devcontainers/dotnet:9.0-noble": {},
    // "ghcr.io/devcontainers/features/go:1.0.0": {},
    //"ghcr.io/devcontainers/features/node:1": {},
    // "ghcr.io/devcontainers/features/java:1": {},
    // "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/dotnet:2": "latest",
    "ghcr.io/devcontainers/features/powershell:1": "latest",
    "ghcr.io/devcontainers/features/azure-cli:1": "latest"
    // "mcr.microsoft.com/devcontainers/rust": {}
  },
  "customizations": {
    "settings": {
      "debug.javascript.autoAttachFilter": "smart"
    },
    "codespaces": {
      "repositories": {
        "Azure/azure-sdk-for-net": {
          "permissions": {
            "contents": "write"
          }
        },
        "Azure/azure-sdk-for-java": {
          "permissions": {
            "contents": "write"
          }
        },
        "Azure/azure-sdk-for-js": {
          "permissions": {
            "contents": "write"
          }
        },
        "Azure/azure-sdk-for-python": {
          "permissions": {
            "contents": "write"
          }
        },
        "Azure/azure-sdk-for-go": {
          "permissions": {
            "contents": "write"
          }
        }
      }
    },
    "vscode": {
      // Keep in sync with .vscode/extensions.json
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "golang.go",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "typespec.typespec-vscode",
        "MS-vsliveshare.vsliveshare",
        "docsmsft.docs-authoring-pack"
      ]
    }
  }
}
