{
  "swagger": "2.0",
  "info": {
    "title": "Azure Communication Telco Messaging Service",
    "description": "Azure Communication Telco Messaging Service",
    "version": "2023-05-14-privatepreview"
  },
  "paths": {
    "/telco-messaging": {
      "post": {
        "tags": [
          "TelcoMessaging"
        ],
        "summary": "Sends an SMS or MMS message from a phone number that belongs to the authenticated account.",
        "operationId": "Message_Send",
        "x-ms-examples": {
          "SuccessfulSend": {
            "$ref": "./examples/send.json"
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Represents the body of the send message request.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SendMessageRequest"
            }
          },
          {
            "name": "api-version",
            "in": "query",
            "description": "Version of API to invoke.",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted",
            "schema": {
              "$ref": "#/definitions/SendMessageResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "SendMessageAttachment": {
      "description": "Represents the properties of a send request attachment.",
      "required": [
        "content",
        "mimeType"
      ],
      "type": "object",
      "properties": {
        "mimeType": {
          "description": "MIME type of attachment.",
          "minLength": 1,
          "type": "string",
          "example": "image/png"
        },
        "content": {
          "description": "Content of the attachment encoded in base 64.",
          "minLength": 1,
          "type": "string",
          "example": ""
        }
      }
    },
    "SendMessageRecipient": {
      "description": "Represents properties for a single recipient",
      "required": [
        "to"
      ],
      "type": "object",
      "properties": {
        "to": {
          "description": "The recipient's phone number in E.164 format.",
          "minLength": 1,
          "type": "string"
        }
      }
    },
    "SendMessageRequest": {
      "description": "Represents the properties of a send message request.",
      "required": [
        "from",
        "recipients"
      ],
      "type": "object",
      "properties": {
        "from": {
          "description": "The from identifier that is owned by the authenticated account. Typically in E.164 phone number format.",
          "minLength": 1,
          "type": "string"
        },
        "recipients": {
          "description": "The to phone numbers in E.164 format.",
          "maxItems": 100,
          "minItems": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/SendMessageRecipient"
          }
        },
        "message": {
          "description": "The contents of the message that will be sent to the recipient.",
          "maxLength": 1000,
          "minLength": 0,
          "type": "string"
        },
        "attachments": {
          "description": "A list of media attachments to include as part of the message. You can have maximum 10 attachments.",
          "maxItems": 10,
          "type": "array",
          "items": {
            "$ref": "#/definitions/SendMessageAttachment"
          }
        }
      }
    },
    "SendMessageResponse": {
      "description": "Response for a successful or multi status send request.",
      "type": "object",
      "properties": {
        "value": {
          "description": "Gets or sets the outgoing recipient phone number, message id,\r\nresponse status code and human-readable message",
          "type": "array",
          "items": {
            "$ref": "#/definitions/SendMessageResponseItem"
          }
        }
      }
    },
    "SendMessageResponseItem": {
      "description": "Response for a single recipient.",
      "type": "object",
      "properties": {
        "to": {
          "description": "The recipient's phone number in E.164 format.",
          "type": "string"
        },
        "messageId": {
          "description": "The identifier of the sent(outgoing) message. Present only if message was accepted.",
          "type": "string"
        },
        "httpStatusCode": {
          "description": "HTTP Status code.",
          "format": "int32",
          "type": "integer"
        },
        "errorMessage": {
          "description": "Optional error message in case of 4xx/5xx errors.",
          "type": "string"
        },
        "successful": {
          "description": "Indicates if the message is processed successfully or not.",
          "type": "boolean"
        }
      }
    }
  },
  "parameters": {},
  "securityDefinitions": {
    "azure_auth": {
      "type": "oauth2",
      "flow": "implicit",
      "authorizationUrl": "https://login.microsoftonline.com/common/oauth2/authorize",
      "scopes": {
        "user_impersonation": "impersonate your user account"
      },
      "description": "Azure Active Directory OAuth2 Flow"
    }
  },
  "x-ms-parameterized-host": {
    "hostTemplate": "{endpoint}",
    "useSchemePrefix": false,
    "parameters": [
      {
        "name": "endpoint",
        "description": "The communication resource, for example https://my-resource.communication.azure.com",
        "required": true,
        "type": "string",
        "format": "url",
        "in": "path",
        "x-ms-skip-url-encoding": true,
        "x-ms-parameter-location": "client"
      }
    ]
  }
}
