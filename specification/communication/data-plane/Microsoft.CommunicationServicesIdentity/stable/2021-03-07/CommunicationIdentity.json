    "/identities/{id}/~revokeAccessTokens": {
      "post": {
        "tags": [
          "Identity"
        ],
        "summary": "Revoke access tokens for the specific identity.",
        "operationId": "CommunicationIdentity_RevokeAccessTokens",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Identifier of the identity.",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "api-version",
            "required": true,
            "type": "string"
