      ],
      "type": "object",
      "properties": {
        "id": {
          "description": "Identifier of the identity.",
          "type": "string"
        }
      }
    },
    "CommunicationIdentityTokenRequest": {
      "required": [
        "scopes"
      ],
      "type": "object",
      "properties": {
        "scopes": {
          "description": "List of scopes attached to the token.",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "CommunicationIdentityToken": {
      "required": [
        "expiresOn",
        "id",
        "token"
      ],
      "type": "object",
      "properties": {
        "id": {
