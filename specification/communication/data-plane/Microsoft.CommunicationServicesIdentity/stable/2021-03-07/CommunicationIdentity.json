          "type": "string"
        },
        "token": {
          "description": "The token issued for the identity.",
          "type": "string"
        },
        "expiresOn": {
          "format": "date-time",
          "description": "The expiry time of the token.",
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
