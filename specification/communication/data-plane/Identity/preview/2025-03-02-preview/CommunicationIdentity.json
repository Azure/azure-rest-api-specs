            }
          },
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/CommunicationIdentityAccessTokenResult"
            }
          }
        },
        "x-ms-examples": {
          "Exchange a Teams Phone token": {
            "$ref": "./examples/ExchangeTeamsPhoneToken.json"
          }
        }
      }
