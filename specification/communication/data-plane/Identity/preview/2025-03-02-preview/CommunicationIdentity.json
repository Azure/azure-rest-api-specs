    "/access/teamsExtension/tenants/{tenantId}/assignments/{objectId}": {
      "get": {
        "tags": [
          "TeamsPhone"
        ],
        "summary": "Get Teams Phone access assignment by object id.",
        "operationId": "GetTeamsPhoneAssignment",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "tenantId",
            "description": "Tenant ID we want to get the assignment for.",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "objectId",
            "description": "Object ID we want to get the assignment for.",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "../../../Common/stable/2022-07-13/common.json#/definitions/CommunicationErrorResponse"
            }
          },
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/TeamsPhoneAssignmentResponse"
            }
          }
        },
        "x-ms-examples": {
          "Get Assignment": {
            "$ref": "./examples/GetTeamsPhoneAssignment.json"
          }
        }
      },
      "put": {
        "tags": [
          "TeamsPhone"
        ],
        "summary": "Creates or replaces a Teams Phone access assignment.",
        "operationId": "CreateOrReplaceTeamsPhoneAssignment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "tenantId",
            "description": "Tenant ID we want to update the assignment for.",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "objectId",
            "description": "Object ID we want to update the assignment for.",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Values we want to set.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TeamsPhoneAssignmentCreateOrUpdateRequest"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "../../../Common/stable/2022-07-13/common.json#/definitions/CommunicationErrorResponse"
            }
          },
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/TeamsPhoneAssignmentResponse"
            }
          },
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/TeamsPhoneAssignmentResponse"
            }
          }
        },
        "x-ms-examples": {
