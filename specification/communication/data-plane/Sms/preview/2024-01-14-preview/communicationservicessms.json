{
  "swagger": "2.0",
  "info": {
    "title": "Azure Communication SMS Service",
    "description": "Azure Communication SMS/MMS Service",
    "version": "2024-01-14-preview"
  },
  "paths": {
    "/mms": {
      "post": {
        "tags": [
          "Mms"
        ],
        "summary": "Sends MMS message from a phone number that belongs to the authenticated account.",
        "operationId": "Mms_Send",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "$ref": "#/parameters/ApiVersionParameter"
          },
          {
            "in": "body",
            "name": "body",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/definitions/MmsSendMessageRequest"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted",
            "schema": {
              "$ref": "#/definitions/MmsSendResponse"
            }
          }
        },
        "x-ms-long-running-operation": true,
        "x-ms-examples": {
          "Send Message": {
            "$ref": "./examples/MmsSendMessageAsync.json"
          }
        }
      }
    },
    "/sms": {
      "post": {
        "tags": [
          "Sms"
        ],
        "summary": "Sends a SMS from a phone number that is acquired by the authenticated account.",
        "operationId": "Sms_Send",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "SendMessageRequest",
            "description": "",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SendMessageRequest"
            }
          },
          {
            "$ref": "#/parameters/ApiVersionParameter"
          }
        ],
        "responses": {
          "202": {
            "description": "Accepted",
            "schema": {
              "$ref": "#/definitions/SmsSendResponse"
            }
          }
        },
        "x-ms-long-running-operation": true,
        "x-ms-examples": {
          "Send Message": {
            "$ref": "./examples/SmsSendMessageAsync.json"
          }
        }
      }
    }
  },
  "definitions": {
    "MmsSendMessageRequest": {
      "description": "Represents the properties of a send message request.",
      "required": [
        "attachments",
        "from",
        "recipients"
      ],
      "type": "object",
      "properties": {
        "from": {
          "description": "The from identifier that is owned by the authenticated account",
          "type": "string"
        },
        "recipients": {
          "description": "The to phone numbers in E.164 format.",
          "maxItems": 100,
          "minItems": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/MmsSendRecipient"
          }
        },
        "message": {
          "description": "The contents of the message that will be sent to the recipient.",
          "maxLength": 1000,
          "minLength": 0,
          "type": "string"
        },
        "attachments": {
          "description": "A list of media attachments to include as part of the MMS. You can have maximum 10 attachments.",
          "maxItems": 10,
          "minItems": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/MmsSendRequestAttachment"
          }
        },
        "sendOptions": {
          "$ref": "#/definitions/MmsSendOptions"
        }
      }
    },
    "MmsSendOptions": {
      "description": "Used for sending more options in the request",
      "required": [
        "enableDeliveryReport"
      ],
      "type": "object",
      "properties": {
        "enableDeliveryReport": {
          "description": "Get or Set the notify delivery report",
          "type": "boolean"
        },
        "tag": {
          "description": "Get or Set the Customer Content\r\nShould not be logged.",
          "type": "string"
        }
      }
    },
    "MmsSendRecipient": {
      "description": "Represents properties for a single recipient",
      "required": [
        "to"
      ],
      "type": "object",
      "properties": {
        "to": {
          "description": "The recipient's phone number in E.164 format.",
          "minLength": 1,
          "type": "string"
        },
        "repeatabilityRequestId": {
          "description": "Optional repeatability-request-id to support idempotency.",
          "type": "string"
        },
        "repeatabilityFirstSent": {
          "type": "string"
        }
      }
    },
    "MmsSendRequestAttachment": {
      "description": "Represents the properties of a send request attachment.",
      "required": [
        "content",
        "mimeType"
      ],
      "type": "object",
      "properties": {
        "mimeType": {
          "description": "MIME type of attachment",
          "minLength": 1,
          "type": "string",
          "example": "image/png"
        },
        "content": {
          "description": "Content of the attachment encoded in base 64.",
          "minLength": 1,
          "type": "string",
          "example": ""
        }
      }
    },
    "MmsSendResponse": {
      "description": "Response for a successful or multi status send request.",
      "type": "object",
      "properties": {
        "value": {
          "description": "Gets or sets the outgoing recipient phone number, message id,\r\nresponse status code and human-readable message",
          "type": "array",
          "items": {
            "$ref": "#/definitions/SendResponseItem"
          }
        }
      }
    },
    "SendMessageRequest": {
      "description": "Represents the properties of a send message request.",
      "required": [
        "from",
        "message",
        "smsRecipients"
      ],
      "type": "object",
      "properties": {
        "from": {
          "description": "The from phone number in E.164 format that is owned by the authenticated account.",
          "type": "string"
        },
        "smsRecipients": {
          "description": "The to phone numbers in E.164 format.",
          "maxLength": 100,
          "minLength": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/SmsRecipient"
          }
        },
        "message": {
          "description": "The contents of the message that will be sent to the recipient. The allowable content is defined by RFC 5724.",
          "maxLength": 2048,
          "minLength": 0,
          "type": "string"
        },
        "smsSendOptions": {
          "$ref": "#/definitions/SmsSendOptions"
        }
      }
    },
    "SendResponseItem": {
      "description": "Sms Response containing metadata for a single recipient.",
      "required": [
        "httpStatusCode",
        "to",
        "successful"
      ],
      "type": "object",
      "properties": {
        "to": {
          "type": "string"
        },
        "messageId": {
          "type": "string"
        },
        "httpStatusCode": {
          "type": "integer"
        },
        "errorMessage": {
          "type": "string"
        },
        "repeatabilityResult": {
          "type": "string"
        },
        "successful": {
          "type": "boolean"
        }
      }
    },
    "SmsRecipient": {
      "description": "Represents properties for a single recipient",
      "required": [
        "to"
      ],
      "type": "object",
      "properties": {
        "to": {
          "description": "The recipient's phone number in E.164 format.",
          "type": "string"
        },
        "repeatabilityRequestId": {
          "description": "Optional repeatability-request-id to support idempotency.",
          "type": "string"
        },
        "repeatabilityFirstSent": {
          "type": "string"
        }
      }
    },
    "SmsSendOptions": {
      "description": "Used for sending more options in send sms request",
      "required": [
        "enableDeliveryReport"
      ],
      "type": "object",
      "properties": {
        "enableDeliveryReport": {
          "description": "Get or Set the notify delivery report",
          "type": "boolean"
        },
        "tag": {
          "description": "Get or Set the Customer Content\r\nShould not be logged.",
          "type": "string"
        }
      }
    },
    "SmsSendResponse": {
      "description": "Defines the Sms response send to the customer",
      "required": [
        "value"
      ],
      "type": "object",
      "properties": {
        "value": {
          "description": "Gets or sets the outgoing recipient phone number, message id,\r\nresponse status code and human-readable message",
          "type": "array",
          "items": {
            "$ref": "#/definitions/SendResponseItem"
          }
        }
      }
    }
  },
  "parameters": {
    "ApiVersionParameter": {
      "in": "query",
      "name": "api-version",
      "description": "Version of API to invoke",
      "required": true,
      "type": "string",
      "x-ms-parameter-location": "client"
    },
    "Endpoint": {
      "in": "path",
      "name": "endpoint",
      "description": "The communication resource, for example https://resourcename.communication.azure.com",
      "required": true,
      "type": "string",
      "format": "url",
      "x-ms-skip-url-encoding": true,
      "x-ms-parameter-location": "client"
    }
  },
  "x-ms-parameterized-host": {
    "hostTemplate": "{endpoint}",
    "useSchemePrefix": false,
    "parameters": [
      {
        "$ref": "#/parameters/Endpoint"
      }
    ]
  }
}
