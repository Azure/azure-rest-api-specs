  "definitions": {
    "ConsumeRecord": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "description": "Key for consumer record",
          "readOnly": true
        },
        "value": {
          "type": "string",
          "description": "Value for consumer record",
          "readOnly": true
        },
        "partition": {
          "type": "integer",
          "format": "int32",
          "description": "Partition ID for consumer record",
          "readOnly": true
        },
        "offset": {
          "type": "integer",
          "format": "int64",
          "description": "Offset for consumer record",
          "readOnly": true
        }
      },
      "description": "List of consumer records"
    },
    "ProducerRecords": {
