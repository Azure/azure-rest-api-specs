            "isAutoShrinkOn": {
              "type": "boolean"
            },
            "isAutoCreateStatsOn": {
              "type": "boolean"
            },
            "isAutoUpdateStatsOn": {
              "type": "boolean"
            },
            "isRemoteDataArchiveEnabled": {
              "type": "boolean"
            },
            "isMemoryOptimizationEnabled": {
              "type": "boolean"
            },
            "isEncrypted": {
              "type": "boolean"
            },
            "isTrustworthyOn": {
              "type": "boolean"
