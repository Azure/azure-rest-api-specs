    "ActiveDirectoryConnectorProperties": {
      "type": "object",
      "description": "The properties of an Active directory connector resource",
      "properties": {
        "provisioningState": {
          "type": "string",
          "readOnly": true
        },
        "spec": {
          "$ref": "#/definitions/ActiveDirectoryConnectorSpec",
          "description": "null",
          "x-ms-client-flatten": false
