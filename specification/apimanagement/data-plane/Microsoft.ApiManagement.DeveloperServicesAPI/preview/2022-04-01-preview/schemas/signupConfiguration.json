{
  "swagger": "2.0",
  "info": {
    "title": "Signup configuration definition",
    "version": "2022-04-01-preview",
    "description": "A spec file containing signup configuration definition"
  },
  "paths": {},
  "definitions": {
    "SignupConfiguration": {
      "type": "object",
      "description": "The developer portal sign-up settings.",
      "x-apim-code-public": "true",
      "properties": {
        "termsOfService": {
          "allOf": [
            {
              "$ref": "#/definitions/TermsOfServiceConfiguration"
            },
            {
              "description": "Terms of service settings."
            }
          ]
        }
      }
    },
    "TermsOfServiceConfiguration": {
      "type": "object",
      "description": "Terms of service contract properties.",
      "x-apim-code-public": "true",
      "properties": {
        "text": {
          "type": "string",
          "description": "A terms of service text. Is required to not be null or empty to enable Terms of Service"
        },
        "enabled": {
          "type": "boolean",
          "description": "Are Terms of Service enabled. Will be enabled, if text exists",
          "default": false
        },
        "requireConsent": {
          "type": "boolean",
          "description": "Ask user for consent to the terms of service.",
          "default": false
        }
      }
    }
  }
}
