    },
    "templateParameters": {
      "description": "Collection of URL template parameters.",
      "x-apim-code-optional": true,
      "type": "array",
      "items": {
        "$ref": "parameter.json"
      }
    },
    "description": {
      "type": "string",
      "description": "Operation description."
    },
    "request": {
      "$ref": "request.json",
      "description": "Operation request.",
      "x-apim-code-optional": true
    },
    "responses": {
      "description": "Array of Operation responses.",
      "x-apim-code-optional": true,
      "type": "array",
      "items": {
        "$ref": "response.json"
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "tag.json"
      },
      "x-apim-code-optional": true
    }
