    "paths": {
        "/checkAccessSynapseRbac": {          
          "post": {
            "tags": [
              "CheckAccessSynapseRbac"
            ],
            "operationId": "CheckAccessSynapseRbac",
            "description": "Check if the given principalId has access to perform list of actions at a given scope.",
            "x-ms-examples": {
              "Check access": {
                "$ref": "./examples/CheckAccessSynapseRbac.json"
              }
            },            
            "consumes": [
                "application/json",
                "text/json"
            ],
            "produces": [
              "application/json",
              "text/json"
            ],
            "parameters": [
              {
                "name": "request",
                "in": "body",
                "required": true,
                "description": "Details of scope, list of actions and principal.",
                "schema": {
                  "$ref": "#/definitions/CheckAccessSynapseRbacRequest"
                }
              },
              {
                "$ref": "#/parameters/ApiVersionParameter"
              }
            ],
            "responses": {
              "200": {
                "description": "Success response.",
                "schema": {
                  "$ref": "#/definitions/CheckAccessSynapseRbacResponse"
                }
              },
              "default": {
                "description": "Error response describing why the operation failed.",
                "schema": {
                  "$ref": "#/definitions/ErrorContract"
                }
              }
            }
          }
        }
    },
    "definitions": {
      "ErrorContract": {
        "title": "Error details.",
        "description": "Contains details when the response code indicates an error.",
        "type": "object",
        "properties": {
          "error": {
