            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ErrorDetail"
            }
          }
        }
      },
      "ErrorDetail": {
        "required": [
          "code",
          "message"
        ],
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      },      
      "CheckAccessSynapseRbacRequest": {
        "description": "Check access request details",
        "type": "object",
        "properties": {
          "subject": {
            "description": "Subject details",
            "type": "object",
            "properties":{
                "principalId": {
                    "description" : "Principal Id",
                    "format": "uuid",
                    "type": "string"
                },
                "groupIds": {
                    "description" : "List of group Ids that the principalId is part of.",
                    "type": "array",
                    "items": {
                        "format": "uuid",
                        "type": "string"
                    }
                }
            }
          },
          "actions": {
            "description" : "List of actions.",
             "type": "array",
             "items": {
                 "$ref": "#/definitions/Action"
             }
          },
          "scope": {
            "description": "Scope at which the check access is done.",
            "type": "string"
          }
        }
      },
      "Action":{
        "description": "Action Info",
        "type": "object",
        "properties":{
          "id": {
              "description": "Action Id.",
              "type": "string"
          },
          "isDataAction": {
              "description": "Is a data action or not.",
              "type": "boolean"
          }
        }
      },
      "CheckAccessSynapseRbacResponse": {
        "description": "Check access response details",
        "type": "array",
        "items" : {
            "$ref": "#/definitions/CheckAccessDecision"
        }
      },
      "CheckAccessDecision": {
        "description": "Check access response details",
        "type": "object",
        "properties": {
          "accessDecision": {
            "description": "Access Decision.",
            "type": "string"
         },
         "actionId": {
             "description": "Action Id.",
