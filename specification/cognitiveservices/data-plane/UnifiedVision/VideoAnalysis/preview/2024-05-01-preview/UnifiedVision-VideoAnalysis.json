            }
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        },
        "x-ms-examples": {
          "ListTasks_MaximumSet_Gen": {
            "$ref": "./examples/ListTasks_MaximumSet_Gen.json"
          }
        }
      }
    }
