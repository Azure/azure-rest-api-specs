              "displayText": "Good morning John Doe.",
              "maskedItnText": "good morning john doe",
              "confidence": 0.9889,
              "wordOffsets": [
                {
                  "word": "Good",
                  "offset": 500000,
                  "duration": 2700000
                },
                {
                  "word": "morning",
                  "offset": 5300000,
                  "duration": 900000
                },
                {
                  "word": "John",
                  "offset": 590000,
                  "duration": 2700000
                },
                {
                  "word": "Doe",
                  "offset": 6300000,
                  "duration": 920000
                }
              ]
            }
          ]
        }
      },
      "tasks": [
        {
          "taskId": "Transcription PII",
          "kind": "TranscriptionPII",
          "parameters": {
            "model-version": "latest",
            "piiCatgories": "All",
            "includeAudioRedaction": true,
            "showDetectedEntityTypes": true
