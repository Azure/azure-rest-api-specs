    "Ocp-Apim-Subscription-Key": "{API key}",
    "api-version": "2022-04-01-preview",
    "Endpoint": "{Endpoint}",
    "jobId": "{Job ID}",
    "input": {
      "displayName": "Redacting Pii From transcribed audio",
      "analysisInput": {
        "conversation": {
          "id": "string",
          "language": "string",
          "conversationItems": [
            {
              "kind": "TranscriptionTurn",
              "participantId": "0",
