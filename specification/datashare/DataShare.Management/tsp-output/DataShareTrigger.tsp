import "@azure-tools/typespec-azure-core";
import "@azure-tools/typespec-azure-resource-manager";
import "@typespec/rest";
import "./models.tsp";
import "./ShareSubscription.tsp";

using TypeSpec.Rest;
using Azure.ResourceManager;
using Azure.ResourceManager.Foundations;
using TypeSpec.Http;

namespace Azure.ResourceManager.DataShare;
// FIXME: DataShareTrigger has no properties property
@doc("A Trigger data transfer object.")
@parentResource(ShareSubscription)
model DataShareTrigger is ProxyResource<{}> {
  @doc("The name of the trigger.")
  @path
  @key("triggerName")
  @segment("triggers")
  name: string;

  ...Azure.ResourceManager.ResourceKind;
}

@armResourceOperations
interface DataShareTriggers {
  @doc("Get a Trigger in a shareSubscription")
  get is ArmResourceRead<DataShareTrigger>;
  @doc("Create a Trigger ")
  create is ArmResourceCreateOrUpdateAsync<DataShareTrigger>;
  @doc("Delete a Trigger in a shareSubscription")
  delete is ArmResourceDeleteAsync<DataShareTrigger>;
  @doc("List Triggers in a share subscription")
  listByShareSubscription is ArmResourceListByParent<
    DataShareTrigger,
    {
      ...BaseParameters<DataShareTrigger>;

      @doc("Continuation token")
      @query("$skipToken")
      $skipToken?: string;
    }
  >;
}
