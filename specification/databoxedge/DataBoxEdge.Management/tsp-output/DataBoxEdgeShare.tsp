import "@azure-tools/typespec-azure-core";
import "@azure-tools/typespec-azure-resource-manager";
import "@typespec/rest";
import "./models.tsp";
import "./DataBoxEdgeDevice.tsp";

using TypeSpec.Rest;
using Azure.ResourceManager;
using Azure.ResourceManager.Foundations;
using TypeSpec.Http;

namespace Azure.ResourceManager.DataBoxEdge;
@doc("Represents a share on the  Data Box Edge/Gateway device.")
@parentResource(DataBoxEdgeDevice)
model DataBoxEdgeShare is ProxyResource<ShareProperties> {
  @doc("The share name.")
  @path
  @key("name")
  @segment("shares")
  name: string;
}

@armResourceOperations
interface DataBoxEdgeShares {
  @doc("Gets a share by name.")
  get is ArmResourceRead<DataBoxEdgeShare>;
  @doc("Creates a new share or updates an existing share on the device.")
  createOrUpdate is ArmResourceCreateOrUpdateAsync<DataBoxEdgeShare>;
  @doc("Deletes the share on the Data Box Edge/Data Box Gateway device.")
  delete is ArmResourceDeleteAsync<DataBoxEdgeShare>;
  @doc("Lists all the shares in a Data Box Edge/Data Box Gateway device.")
  listByDataBoxEdgeDevice is ArmResourceListByParent<DataBoxEdgeShare>;
  @doc("Refreshes the share metadata with the data from the cloud.")
  refresh is ArmResourceActionAsync<DataBoxEdgeShare, {}, {}>;
}
