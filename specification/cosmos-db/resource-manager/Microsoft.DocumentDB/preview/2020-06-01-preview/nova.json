        "DataCenterProperties": {
            "type": "object",
            "description": "Properties of a managed Cassandra data center for both GET and PUT requests.",
            "properties": {
                "location": {
                    "type": "string",
                    "description": "The region this data center is in (determined by delegatedSubnetId)"
                },
                "delegatedSubnetId": {
                    "type": "string",
                    "description": "Azure resource ID of a subnet this should connect to. This will also determine the data center's region."
                },
                "capacity": {
                    "type": "integer",
                    "description": "The number of nodes the data center should have."
                }
            }
        },
        "DataCenterGetOnlyProperties": {
            "type": "object",
            "description": "Properties of a managed Cassandra data center on a GET request.",
            "properties": {
                "seedNodes": {
                    "type": "array",
                    "description": "IP addresses for seed nodes in this data center.",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
