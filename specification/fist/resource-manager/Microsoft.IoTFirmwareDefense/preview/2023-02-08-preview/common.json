    },
    "FirmwareIdParameter": {
      "name": "firmwareId",
      "in": "path",
      "required": true,
      "type": "string",
      "description": "The id of the firmware.",
      "x-ms-parameter-location": "method"
    },
    "WorkspaceNameParameter": {
      "name": "workspaceName",
      "in": "path",
      "required": true,
      "type": "string",
      "description": "The name of the firmware analysis workspace.",
      "pattern": "^[a-zA-Z0-9][a-zA-Z0-9_.-]*$",
      "x-ms-parameter-location": "method"
    }
  }
