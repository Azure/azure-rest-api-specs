{
  "parameters": {
    "subscriptionId": "{subscription-id}",
    "resourceGroupName": "myResourceGroup",
    "api-version": "2025-11-01",
    "availabilitySetName": "myAvailabilitySet",
    "parameters": {
      "location": "westus",
      "properties": {
        "platformFaultDomainCount": 2,
        "platformUpdateDomainCount": 20
      }
    }
  },
  "responses": {
