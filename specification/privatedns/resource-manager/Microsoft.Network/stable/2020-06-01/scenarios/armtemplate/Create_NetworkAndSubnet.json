{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "defaultValue": "pn-network"
    }
  },
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "eastus",
      "tags": {},
      "apiVersion": "2021-05-01",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "10.0.0.0/16"
          ]
        },
        "subnets": [
          {
            "name": "test-1",
            "properties": {
              "addressPrefix": "10.0.0.0/24"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "subnetId": {
      "value": "[reference(resourceId('Microsoft.Network/virtualNetworks', parameters('name')), '2021-05-01').Subnets[0].ID]",
      "type": "string"
    }
  }
}