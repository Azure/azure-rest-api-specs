import "@azure-tools/typespec-azure-core";
import "@azure-tools/typespec-azure-resource-manager";
import "@typespec/rest";
import "./models.tsp";
import "./VirtualApplicationGroup.tsp";

using TypeSpec.Rest;
using Azure.ResourceManager;
using Azure.ResourceManager.Foundations;
using TypeSpec.Http;

namespace Azure.ResourceManager.DesktopVirtualization;
@doc("Schema for Desktop properties.")
@parentResource(VirtualApplicationGroup)
model VirtualDesktop is ProxyResource<DesktopProperties> {
  @doc("The name of the desktop within the specified desktop group")
  @maxLength(24)
  @minLength(3)
  @path
  @key("desktopName")
  @segment("desktops")
  name: string;
}

@armResourceOperations
interface VirtualDesktops {
  @doc("Get a desktop.")
  get is ArmResourceRead<VirtualDesktop>;
  @doc("Update a desktop.")
  update is ArmResourcePatchSync<VirtualDesktop, DesktopProperties>;
  @doc("List desktops.")
  list is ArmResourceListByParent<
    VirtualDesktop,
    {
      ...BaseParameters<VirtualDesktop>;

      @doc("Number of items per page.")
      @query("pageSize")
      pageSize?: int32;

      @doc("Indicates whether the collection is descending.")
      @query("isDescending")
      isDescending?: boolean;

      @doc("Initial number of items to skip.")
      @query("initialSkip")
      initialSkip?: int32;
    }
  >;
}
