      "description": "Metadata for a specific telemetry type (logs or metrics).",
      "type": "object",
      "properties": {
        "supportedDestinations": {
          "description": "List of supported destination resource types.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "Microsoft.OperationalInsights/workspaces",
            "Microsoft.EventHub/namespaces",
            "Microsoft.Storage/storageAccounts"
          ]
        },
        "supportedResourceTypes": {
          "description": "List of supported source resource types.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "Microsoft.Cache/Redis",
            "Microsoft.Storage/storageAccounts"
          ]
        },
        "supportedStreams": {
          "description": "Detailed stream information per resource type (only in fetchDetails response).",
