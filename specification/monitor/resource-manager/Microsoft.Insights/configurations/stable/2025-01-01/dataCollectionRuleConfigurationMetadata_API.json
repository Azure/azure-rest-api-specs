      "properties": {
        "name": {
          "description": "The name of the logs stream.",
          "type": "string",
          "example": "StorageRead"
        },
        "displayName": {
          "description": "The display name of the logs stream.",
          "type": "string",
          "example": "Storage Read Operations"
        },
        "groups": {
          "description": "Categorization groups for the logs stream.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "example": [
            "audit",
            "read"
          ]
