        "type": "object",
        "description": "DecompileOperationSuccessResponse object",
        "properties": {
          "files": {
            "type": "object",
            "description": "ARM json template",
            "additionalProperties": {
              "type": "string"
            }
          },
          "entryPoint": {
            "type": "string",
            "description": "ARM json template"
          }
        }
      },
      "DecompileError": {
        "type": "object",
        "properties": {
          "error": {
