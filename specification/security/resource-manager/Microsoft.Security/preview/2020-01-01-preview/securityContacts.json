      "type": "object",
      "description": "Contact details and configurations for notifications coming from Azure Security Center.",
      "properties": {
        "properties": {
          "x-ms-client-flatten": true,
          "description": "Security contact data",
          "$ref": "#/definitions/SecurityContactProperties"
        }
      },
      "allOf": [
