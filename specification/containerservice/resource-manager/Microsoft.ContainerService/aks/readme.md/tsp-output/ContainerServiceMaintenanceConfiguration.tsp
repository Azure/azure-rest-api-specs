import "@azure-tools/typespec-azure-core";
import "@azure-tools/typespec-azure-resource-manager";
import "@typespec/rest";
import "./models.tsp";
import "./ContainerServiceManagedCluster.tsp";

using TypeSpec.Rest;
using Azure.ResourceManager;
using Azure.ResourceManager.Foundations;
using TypeSpec.Http;

namespace Azure.ResourceManager.ContainerService;
@doc("See [planned maintenance](https://docs.microsoft.com/azure/aks/planned-maintenance) for more information about planned maintenance.")
@parentResource(ContainerServiceManagedCluster)
model ContainerServiceMaintenanceConfiguration
  is ProxyResource<MaintenanceConfigurationProperties> {
  @doc("The name of the maintenance configuration.")
  @path
  @key("configName")
  @segment("maintenanceConfigurations")
  name: string;
}

@armResourceOperations
interface ContainerServiceMaintenanceConfigurations {
  @doc("Gets the specified maintenance configuration of a managed cluster.")
  get is ArmResourceRead<ContainerServiceMaintenanceConfiguration>;
  @doc("Creates or updates a maintenance configuration in the specified managed cluster.")
  createOrUpdate is ArmResourceCreateOrReplaceSync<ContainerServiceMaintenanceConfiguration>;
  @doc("Deletes a maintenance configuration.")
  delete is ArmResourceDeleteSync<ContainerServiceMaintenanceConfiguration>;
  @doc("Gets a list of maintenance configurations in the specified managed cluster.")
  listByManagedCluster is ArmResourceListByParent<ContainerServiceMaintenanceConfiguration>;
}
