                                        "Value": "NBCapiMOBQyAAbCkeytoPadnvO0eGHmidwFz5rXpappznKp3Jt7LLg=="
                                    }
                                },
                                "Response": {
                                    "SuccessStatusCodes": [
                                        "OK"
                                    ],
                                    "Regex": {
                                        "MatchQuantifier": "All",
                                        "Matches": [
                                            "(?i)Contoso-App",
                                            "(?i)\"health_status\":((.|\n)*)\"(green|yellow)\"",
                                            "(?mi)^(\"application_host\": 94781052)$"
                                        ]
                                    }
                                }
                            },
